{
    "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": [
      "node",
      "webpack-env"
    ],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "./server",
    "paths": {
      "@redux/*": [
        "src/client/redux/*"
      ],
      "@components/*": [
        "src/client/components/*"
      ],
    },
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "./node_modules/**/*"
    ]
}
  